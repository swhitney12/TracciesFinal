<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/layeredgradientblob" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="60sp"
        />

    <EditText
        android:id="@+id/editTextLoginUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:fontFamily="@font/rajdhani_semibold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:hint="username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextLoginUsername"
        android:fontFamily="@font/rajdhani_semibold"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Glad to have you back!"
        />

    <Button
        android:id="@+id/Loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextLoginPassword"
        android:layout_marginTop="30dp"
        android:text="Login"
        />

    <TextView
        android:id="@+id/toSignUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Loginbtn"
        android:layout_marginTop="15dp"
        android:text=" Don't have an account? Sign up here."
        android:textColor="#9B51E0"
        />
</RelativeLayout>