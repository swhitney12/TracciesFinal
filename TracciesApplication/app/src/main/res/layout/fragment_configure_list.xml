<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfigureListFragment"
    android:id="@+id/fragment_configure_list">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dripbg" />

    <EditText
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:text="List Name"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/white"



        android:fontFamily="@font/poppins_light"
        android:background="@drawable/edit_list_name"

        />

    <ImageView
        android:id="@+id/pencil"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"


        app:srcCompat="@drawable/pencil" />

    <Button
    android:id="@+id/createListButton"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginBottom="200dp"
    android:text="Create List"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:fontFamily="@font/poppins_medium"


        app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/create_list" />





</androidx.constraintlayout.widget.ConstraintLayout>