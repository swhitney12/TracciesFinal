<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="420dp"
    android:background="@drawable/savetolistpopupstyling"
    android:layout_gravity="center"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/popupclosebuttonimg"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/closebutton"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/savetolisttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7366FF"
            android:fontFamily="@font/rajdhani_semibold"
            android:textSize="24dp"
            android:text="Save to List"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />

        <ListView
            android:id="@+id/popuplists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savetolisttxt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


    </RelativeLayout>


</LinearLayout>