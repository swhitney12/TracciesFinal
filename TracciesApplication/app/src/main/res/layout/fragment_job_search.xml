<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".JobSearchFragment">

    <ImageView
        android:id="@+id/jobSearchBacksplash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/backsplash" />

    <TextView
        android:id="@+id/jobSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani_semibold"
        android:text="Jobs For You"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        />

    <ListView
        android:id="@+id/jobListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobSearchBacksplash"
        android:layout_marginBottom="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp" >


    </ListView>


</RelativeLayout>